{
  "name": "cinema-tickets-javascript",
  "description": "This is a coding exercise which will allow you to demonstrate how you code and your approach to a given problem.",
  "version": "1.0.1",
  "engines": {
    "node": ">=20.9.0"
  },
  "type": "module",
  "scripts": {
    "cover": "c8 --config .c8rc.json check-coverage",
    "lint": "eslint .",
    "test": "npm run test:unit && npm run test:interface",
    "test:unit": "c8 --config .c8rc.json mocha --config test/unit/.mocharc.cjs --check-leaks",
    "test:interface": "cucumber-js --config test/cucumber/interface.cucumber.js"
  },
  "devDependencies": {
    "@cucumber/cucumber": "11.0.1",
    "@dwp/eslint-config-base": "9.0.1",
    "@dwp/eslint-config-mocha": "1.3.1",
    "c8": "10.1.2",
    "chai": "5.1.1",
    "eslint": "9.13.0",
    "eslint-plugin-mocha": "10.5.0",
    "globals": "15.11.0",
    "mocha": "10.7.3",
    "prettier": "3.3.3",
    "sinon": "19.0.2",
    "sinon-chai": "4.0.0"
  }
}
